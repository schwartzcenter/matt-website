---
import BaseLayout from '../layouts/BaseLayout.astro';
import SocialLinks from '../components/SocialLinks.astro';
---

<BaseLayout title="Contact - Matt Schwartz" description="Get in touch with Matt Schwartz.">
  <section class="contact-header">
    <h1>Get in Touch</h1>
    <p>I'd love to hear from youâ€”whether it's about building companies, creating impact, or just sharing thoughts on anything I've written.</p>
  </section>

  <section class="contact-options">
    <div class="contact-card">
      <h2>Email</h2>
      <p>The best way to reach me for longer conversations or collaboration opportunities.</p>
      <a href="mailto:schwartzbmatthew@gmail.com" class="email-link">schwartzbmatthew@gmail.com</a>
    </div>

    <div class="contact-card">
      <h2>Social</h2>
      <p>Connect with me on social media for updates and quick exchanges.</p>
      <SocialLinks />
    </div>
  </section>
</BaseLayout>

<style>
  .contact-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .contact-header h1 {
    margin-bottom: var(--space-sm);
  }

  .contact-header p {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    max-width: 480px;
    margin: 0 auto;
  }

  .contact-options {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .contact-card {
    padding: var(--space-xl);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    background-color: var(--color-bg-alt);
  }

  .contact-card h2 {
    font-size: 1.25rem;
    margin-bottom: var(--space-sm);
  }

  .contact-card p {
    margin-bottom: var(--space-md);
  }

  .email-link {
    display: inline-block;
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-accent);
  }

  .email-link:hover {
    text-decoration: underline;
  }
</style>
